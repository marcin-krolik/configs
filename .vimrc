set nocompatible

set number
set incsearch
set autoindent
set ruler
set autowrite
set smarttab
set linebreak
set et
set title
set hlsearch
set bg=dark

set mouse=v
set history=50
set tabstop=4
set matchtime=2
set matchpairs+=<:>

syntax enable
filetype plugin indent on
filetype indent on
set sw=4

set backspace=2
set backspace=indent,eol,start
hi Comment ctermfg=LightRed
